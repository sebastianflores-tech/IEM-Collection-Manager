<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>IEM List</title>
</head>
<body>
    <%- include('../partials/header') %>
    
    <h1>All IEMs</h1>

    <% if (iems.length === 0) { %>
        <p>No IEMs in the database yet.</p>
    <% } else { %>
        <ul>
            <% iems.forEach(function(iem) { %>
                <li class="iem-item">
                    <strong><%= iem.brand %> - <%= iem.model %></strong><br>

                    <small>
                        Sound Signature: <%= iem.soundSignature %><br>
                        Rating: <%= iem.rating %>/10
                    </small>
                    <br>

                    <a href="/iems/<%= iem._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>

                    <form action="/iems/<%= iem._id %>/delete"
                          method="POST"
                          style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    <% } %>

    <%- include('../partials/footer') %>
</body>
</html>
